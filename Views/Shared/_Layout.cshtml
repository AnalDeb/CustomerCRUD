@using DevOpsPortal.SessionObject

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hexaware Technologies Limited</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{SingletonObject oSingleton = SingletonObject.GetCurrentSingleton();}  
    @Html.Hidden("SessionID", @HttpContext.Current.Session.SessionID) 
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top headercolor">
        <div class="container">
            <div class="navbar-header">
                <div class="row">
                    <div class="col-md-1">
                        <img class="" src="~/Images/Hexaware.png" />
                    </div>
                    <div class="col-md-8 devops-text">
                        DevOps Solutions
                    </div>
                    <div class="col-md-3">                        
                        <div class="col-md-12 logout">                            
                            @oSingleton.EMail.ToString() | 
                            @Html.ActionLink("Logout", "LogOut", "Home")
                        </div>
                        <div class="col-md-12 version">
                            Product Version: @System.Configuration.ConfigurationManager.AppSettings["PruductVersion"]
                        </div>                                       
                    </div>
                </div>
            </div>                
        </div>
    </div>
    <div class="container body-content">             
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Hexaware Technologies Limited</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
